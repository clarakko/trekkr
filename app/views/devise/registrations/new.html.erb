<div class="row">
  <div class="column small-centered medium-10">
    <div class="trans">
      <div class="trans-title">
        <h2>Sign up</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row">
        <div class="column small-12 medium-10">
          <%= devise_error_messages! %>
          <div class="row">
            <div class="column small-3">
              <%= f.label :username, class: "right" %>
            </div>
            <div class="column small-9 inline">
              <%= f.text_field :username, autofocus: true %>
            </div>
          </div>
          <div class="row">
            <div class="column small-3">
              <%= f.label :email, class: "right" %>
            </div>
            <div class="column small-9 inline">
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
          <div class="row">
            <div class="column small-3">
              <%= f.label :password, class: "right" %>
            </div>
            <div class="column small-9 inline">
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>
          <div class="row">
            <div class="column small-3">
              <%= f.label :password_confirmation, class: "right" %>
            </div>
            <div class="column small-9 inline">
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>
          <div class="row">
            <div class="column small-offset-3">
              <div class="actions">
                <%= f.submit "Sign Up", class: "button tiny" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
